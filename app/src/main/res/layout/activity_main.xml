<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ejemplo.sergio.almsecpant.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d7d5d5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNom"
            android:layout_below="@+id/nombre"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:id="@+id/nombre"
            android:layout_marginTop="33dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DNI"
            android:id="@+id/dni"
            android:layout_below="@+id/editTextNom"
            android:layout_alignStart="@+id/nombre"
            android:layout_marginTop="28dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText2Dni"
            android:layout_below="@+id/dni"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha nacimiento"
            android:id="@+id/textView"
            android:layout_below="@+id/editText2Dni"
            android:layout_alignStart="@+id/dni"
            android:layout_marginTop="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo"
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/textView" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:id="@+id/guardar"
            android:background="#252525"
            android:textColor="#ffffff"
            android:layout_above="@+id/mostrar"
            android:layout_toEndOf="@+id/textView"
            android:layout_marginBottom="41dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar"
            android:id="@+id/mostrar"
            android:background="#252525"
            android:textColor="#ffffff"
            android:layout_marginBottom="45dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textView" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sex"
            android:background="#ffffff"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:hint="@string/sexo"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editTextFecha"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            android:hint="@string/fecha"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

    </RelativeLayout>
</RelativeLayout>
